{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/segment.schema.json",
  "title": "Segment",
  "type": "object",
  "properties": {
    "source": { "type": "string" },
    "t_start": { "type": "number", "minimum": 0 },
    "t_end": { "type": ["number", "null"], "minimum": 0 },
    "speaker": { "type": "string" },
    "text": { "type": "string" },
    "tokens": { "type": ["integer", "null"], "minimum": 0 },
    "cue_id": { "type": ["string", "null"] }
  },
  "required": ["source", "t_start", "speaker", "text"],
  "additionalProperties": false
}
